<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InsertaProfesores" >

    
     <TextView
        android:id="@+id/labelEditCodProf" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona el Codigo Centro" 
        android:layout_below="@+id/label"/>
     
     <Spinner 
        android:id="@+id/spinEditProf" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/labelEditCodProf"/>
     
     
	
	<TextView
        android:id="@+id/labelEditApeProf" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce los apellidos" 
        android:layout_below="@+id/spinEditProf"
        android:layout_alignLeft="@+id/labelEditCodProf"
        android:layout_marginTop="40dp"/>
	
	<EditText
	    android:id="@+id/editApeProf" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelEditCodProf"
        android:layout_toRightOf="@+id/labelEditApeProf" 
        android:layout_marginTop="40dp"
        android:inputType="text"/>
	
	<TextView
        android:id="@+id/labelEspecialidadProf" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce la especialidad" 
        android:layout_below="@+id/labelEditApeProf"
        android:layout_alignLeft="@+id/labelEditApeProf"
        android:layout_marginTop="40dp"
        />
	
	<EditText
	    android:id="@+id/EditEspeProf" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelEditApeProf"
        android:layout_toRightOf="@+id/labelEspecialidadProf"
        android:layout_marginTop="40dp" 
        android:inputType="text"/>
	
	<Button 
	     android:id="@+id/bEditProf" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar" 
        android:layout_below="@+id/labelEspecialidadProf"
        android:layout_alignLeft="@+id/labelEspecialidadProf"
        android:layout_marginTop="40dp"/>
</RelativeLayout>