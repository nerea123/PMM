<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/flux"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textStyle="bold" 
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"/>
    
    <Button 
        android:id="@+id/crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear base de datos"
        
        android:layout_below="@+id/txt"
        android:layout_centerInParent="true"
      />
    
     
    <Button 
        android:id="@+id/profesores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Profesores"
        android:layout_below="@+id/crear"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
      />
    
     <Button 
        android:id="@+id/personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Personal"
        android:layout_below="@+id/crear"
        android:layout_toRightOf="@+id/profesores"
        android:layout_marginTop="40dp"
      />
     
          <Button 
        android:id="@+id/centros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Centros"
        android:layout_below="@+id/profesores"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
      />
    
    

</RelativeLayout>
